extends layouts/layout.pug
block content
  h1 #{title}
  if errorMessage && errorMessage.length
    .alert.alert-danger
      ul
        each error in errorMessage
          li.text-red-500 #{error.msg}

  .container.mx-auto.px-4.py-8
      h1.text-2xl.font-bold.mb-6 Article Submission 
      
      form(action='/articles', method='POST')
        .mb-4
          label(for='title' class='block text-sm font-medium text-gray-700') Title
          input#title(name='title' type='text' value=formData ? formData.title : '' required class='mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500')
        

        .mb-4
          label(for='body' class='block text-sm font-medium text-gray-700') Body
          textarea#body(name='body' required rows='5'  class='mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500')=formData ? formData.body : ''
        
        button(type='submit' class='mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500') Submit