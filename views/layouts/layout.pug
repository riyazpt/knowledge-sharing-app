doctype html
html
  head
    title Article
    link(rel='stylesheet', href='/style.css')
    script(src='https://cdn.tailwindcss.com') 
    script.
      document.addEventListener('DOMContentLoaded', function() {
        const userMenuButton = document.getElementById('user-menu-button');
        const userMenu = document.querySelector('.dropdown-menu');
        
        userMenuButton.addEventListener('click', function() {
          userMenu.classList.toggle('hidden'); 
        });
      });
  body
    nav.bg-gray-800
      .mx-auto.max-w-7xl.px-2(class='sm:px-6 lg:px-8')
        .relative.flex.h-16.items-center.justify-between
          .absolute.inset-y-0.left-0.flex.items-center(class='sm:hidden')
            button.relative.inline-flex.items-center.justify-center.rounded-md.p-2.text-gray-400(type='button' class='hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white' aria-controls='mobile-menu' aria-expanded='false')
              span.sr-only Open main menu
              svg.block.h-6.w-6(fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor' aria-hidden='true' data-slot='icon')
                path(stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5')
        
          .flex.flex-1.items-center.justify-center(class='sm:items-stretch sm:justify-start')
            .flex.flex-shrink-0.items-center
              img.h-8.w-auto(src='https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=500' alt='Your Company')
            .hidden(class='sm:ml-6 sm:block')
              .flex.space-x-4
                a.rounded-md.bg-gray-900.px-3.py-2.text-sm.font-medium.text-white(href='/' aria-current='page') Home
                if user
                  a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/articles' class='hover:bg-gray-700 hover:text-white') Add Article
                else
                  a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/user/register' class='hover:bg-gray-700 hover:text-white') Register
                  a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/user/login' class='hover:bg-gray-700 hover:text-white') Login
          .absolute.inset-y-0.right-0.flex.items-center.pr-2(class='sm:static sm:inset-auto sm:ml-6 sm:pr-0')
            button.relative.rounded-full.bg-gray-800.p-1.text-gray-400(type='button' class='hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800')
              span.sr-only View notifications
              svg.h-6.w-6(fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor' aria-hidden='true')
                path(stroke-linecap='round' stroke-linejoin='round' d='M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0')

            // Profile dropdown
            .relative.ml-3
              div
                button#user-menu-button.relative.flex.rounded-full.bg-gray-800.text-sm(type='button' class='focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' aria-expanded='false' aria-haspopup='true')
                  span.sr-only Open user menu
                  img.h-8.w-8.rounded-full(src='https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80' alt='')

              // Dropdown menu, hidden by default
              .absolute.right-0.z-10.mt-2.w-48.origin-top-right.rounded-md.bg-white.py-1.shadow-lg.ring-1.ring-black.ring-opacity-5.hidden.dropdown-menu(class='focus:outline-none' role='menu' aria-orientation='vertical' aria-labelledby='user-menu-button')
                a.block.px-4.py-2.text-sm.text-gray-700(href='/') Home
                a.block.px-4.py-2.text-sm.text-gray-700(href='/articles') Add Article
                a.block.px-4.py-2.text-sm.text-gray-700(href='/user/logout') Sign out

      // Mobile Menu
      #mobile-menu(class='hidden sm:hidden')
        .space-y-1.px-2.pb-3.pt-2
         
          a.block.rounded-md.px-3.py-2.text-base.font-medium.text-gray-300(href='/') Home
          a.block.rounded-md.px-3.py-2.text-base.font-medium.text-gray-300(href='/articles') Add Article
    != messages('message', locals) 
    block content
    footer 
